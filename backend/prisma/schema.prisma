// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Deck {
  id          Int    @id @default(autoincrement())
  name        String
  description String
}

model Card {
  id          Int    @id @default(autoincrement())
  name        String
  imgUrl      String
  description String
  set         String
  sheet       String
}

model Rule {
  id          Int    @id @default(autoincrement())
  name        String
  description String
}
